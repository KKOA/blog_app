<article class="article-detail">
  <h1 class="article-detail-title">
    <%= @article.title %>
  </h1>
  <div class="glyphicon glyphicon-calendar" id="article-date">
    <%= @article.created_at.strftime("%b %d, %Y") %>
  </div>
  <div class="article-body">
    <%= @article.body %>
  </div>
</article>
<%= link_to 'View Articles', articles_path, class: 'btn btn-default' %>
<% if user_signed_in? && current_user == @article.user %>
  <%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-default' %>
  <%= link_to "Delete Article", article_path(@article),
  method: :delete,
  data: { confirm: "Are you sure you want to delete article?" }, class: "btn btn-default btn-space" %>
<% end %>
